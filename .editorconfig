# Editor configuration, see https://editorconfig.org
root = true

[*]
# 缩进风格，可以是 space 或 tab
indent_style = space

# 缩进大小，表示空格或制表符的数量
indent_size = 2

# 行尾换行符
end_of_line = lf

# 字符集
charset = utf-8

# 是否去除行尾的空白字符
trim_trailing_whitespace = true

# 是否在文件末尾插入一个空白行
insert_final_newline = true

max_line_length = 100

[*.md]
trim_trailing_whitespace = false
